{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "nest start --watch",
    "build": "tsc -p tsconfig.build.json",
    "prisma:generate": "prisma generate",
    "start:prod": "node dist/main.js",
    "pkg:build": "npm run build && npm run prisma:generate && npm run pkg:all",
    "pkg:all": "pkg --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --out-path ./dist-bin ./dist/main.js",
    "pkg:linux": "pkg --targets node18-linux-x64 --out-path ./dist-bin ./dist/main.js",
    "pkg:macos": "pkg --targets node18-macos-x64 --output ./dist-bin/main-macos ./dist/main.js",
    "pkg:windows": "pkg --targets node18-win-x64 --output ./dist-bin/main-win.exe ./dist/main.js",
    "copy:binaries": "npm run copy:linux && npm run copy:macos && npm run copy:windows",
    "copy:linux": "cp ./dist-bin/main-linux ../src-tauri/binaries/my-backend-x86_64-unknown-linux-gnu",
    "copy:macos": "cp ./dist-bin/main-macos ../src-tauri/binaries/my-backend-x86_64-apple-darwin",
    "copy:windows": "cp ./dist-bin/main-win.exe ../src-tauri/binaries/my-backend-x86_64-pc-windows-msvc.exe"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@prisma/client": "^6.13.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/node": "^24.2.1",
    "pkg": "^5.8.0",
    "prisma": "^6.13.0",
    "typescript": "^5.3.3"
  }
}